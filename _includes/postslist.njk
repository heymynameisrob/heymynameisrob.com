<ul class="post-list">
  {%- for post in postslist.slice(0, 8) %}
     <li>      
      <a href="{% if post.data.externalLink %}{{ post.data.externalLink }}{% else %} {{ post.url | url }}{% endif %}">        
        <h3>
          {{ post.data.title }}
          {% if post.data.externalLink %}
            <svg width="16px" height="16px" viewBox="0 0 24 24"><g stroke="var(--text-light)" stroke-width="1.5" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"><polyline points="17 13.5 17 19.5 5 19.5 5 7.5 11 7.5"></polyline><path d="M14,4.5 L20,4.5 L20,10.5 M20,4.5 L11,13.5"></path></g></svg>
          {% endif %}
        </h3>     
        <p>{{ post.data.description }}</p>        
        <small>{% if post.data.externalLink %} Link {% else %} Post {% endif %} â€¢ {{ post.date | readableDate }}</small>   
      </a>                    
    </li>
  {% endfor %}
</ul>