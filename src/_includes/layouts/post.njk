---
layout: layouts/base.njk
contained: true
templateClass: post
---
<header role="banner" class="flex items-center flex-col py-16 md:py-24 space-y-4">  
  <h1 class="text-2xl md:text-4xl">{{ title }}</h1>
  <small class="block text-xs md:text-sm text-gray-600 font-mono">Last updated {{ date | readableDate }}</small>  
</header>
<section class="content">
  {{ content | safe }}
</section>