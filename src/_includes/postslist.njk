<ul class="post-list">
  {%- for post in postslist.slice(0, 8) %}
     <li class="py-4">      
        <a class="flex items-center font-bold text-lg md:text-xl bg-opacity-0 no-underline text-gray-900 leading-normal mb-2" href="{% if post.data.externalLink %}{{ post.data.externalLink }}{% else %} {{ post.url | url }}{% endif %}">{{ post.data.title }}{% if post.data.externalLink %}<svg width="16px" height="16px" viewBox="0 0 24 24"><g stroke="#b5b5a6" stroke-width="1.5" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"><polyline points="17 13.5 17 19.5 5 19.5 5 7.5 11 7.5"></polyline><path d="M14,4.5 L20,4.5 L20,10.5 M20,4.5 L11,13.5"></path></g></svg>{% endif %}</a>
        <p class="text-base mb-2 max-w-xl">{{ post.data.summary }}</p>       
        <small class="block text-xs md:text-sm text-gray-600 font-mono">{{ post.date | readableDate }}</small>                                 
    </li>
  {% endfor %}
</ul>